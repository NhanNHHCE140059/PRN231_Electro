@model IEnumerable<ElectroMVC.Models.User>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>List Of User</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="w3-table-all">
	<thead>
		<tr class="w3-light-grey">
			<th>
				@Html.DisplayNameFor(model => model.UserName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserBirthday)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserPhone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserAddress)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserEmail)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserPassword)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UserRole)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.UserName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserBirthday)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserPhone)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserAddress)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserEmail)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserPassword)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.UserRole)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-success">Edit</a> |
				<a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">Details</a> |
				<a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	}
</table>